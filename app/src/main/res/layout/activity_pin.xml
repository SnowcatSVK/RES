<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".restrictors.PINActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">

        <EditText
            android:id="@+id/EditText0"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:width="60dp"
            android:background="@drawable/underline"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:textColor="#222"
            android:textSize="60sp" />

        <EditText
            android:id="@+id/EditText1"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:width="60dp"
            android:background="@drawable/underline"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:textColor="#222"
            android:textSize="60sp" />

        <EditText
            android:id="@+id/EditText2"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:width="60dp"
            android:background="@drawable/underline"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:textColor="#222"
            android:textSize="60sp" />

        <EditText
            android:id="@+id/EditText3"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:width="60dp"
            android:background="@drawable/underline"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:textColor="#222"
            android:textSize="60sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/wrong_pin_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pin_layout"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="@string/wrong_pin"
        android:textColor="@color/colorAccentAntik"
        android:textSize="30sp"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/pin_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <sk.antik.res.PINButton
                android:id="@+id/button_num_1"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:background="#fff"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="1"
                android:textSize="25sp" />

            <sk.antik.res.PINButton
                android:id="@+id/button_num_2"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:background="#fff"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="2"
                android:textSize="25sp" />

            <sk.antik.res.PINButton
                android:id="@+id/button_num_3"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:background="#fff"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="3"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <sk.antik.res.PINButton
                android:id="@+id/button_num_4"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:background="#fff"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="4"
                android:textSize="25sp" />

            <sk.antik.res.PINButton
                android:id="@+id/button_num_5"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:background="#fff"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="5"
                android:textSize="25sp" />

            <sk.antik.res.PINButton
                android:id="@+id/button_num_6"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:background="#fff"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="6"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp">

            <sk.antik.res.PINButton
                android:id="@+id/button_num_7"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:background="#fff"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="7"
                android:textSize="25sp" />

            <sk.antik.res.PINButton
                android:id="@+id/button_num_8"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:background="#fff"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="8"
                android:textSize="25sp" />

            <sk.antik.res.PINButton
                android:id="@+id/button_num_9"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:background="#fff"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="9"
                android:textSize="25sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <sk.antik.res.PINButton
                android:id="@+id/button_num_blank"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:background="#fff"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:textSize="25sp" />

            <sk.antik.res.PINButton
                android:id="@+id/button_num_0"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:background="#fff"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="0"
                android:textSize="25sp" />

            <sk.antik.res.PINButton
                android:id="@+id/button_num_del"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:background="#fff"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="DEL"
                android:textSize="25sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
