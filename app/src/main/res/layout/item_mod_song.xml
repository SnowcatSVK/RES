<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/play_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mod_song_image_selector"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/number_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01"
        android:textSize="20sp"
        android:textColor="@color/textGrey"
        android:layout_toEndOf="@+id/play_imageView"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/song_name_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="In The Beginning"
        android:textSize="22sp"
        android:textColor="@drawable/mod_folder_selector"
        android:fontFamily="sans-serif-light"
        android:layout_toEndOf="@+id/number_textView"
        android:layout_toStartOf="@+id/song_lenght_textView"
        android:layout_centerVertical="true"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/song_lenght_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01:24"
        android:textSize="20sp"
        android:textColor="@color/textGrey"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="12dp"
        android:visibility="invisible"/>

</RelativeLayout>