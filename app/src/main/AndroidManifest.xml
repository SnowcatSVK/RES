<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sk.antik.res">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyTheme">
        <activity
            android:name=".MainActivity"
            android:hardwareAccelerated="true"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <service
            android:name=".AppKillerService"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name=".restrictors.PINActivity"
            android:label="@string/title_activity_pin"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name="sk.antik.res.VODPlayerActivity"
            android:label="@string/title_activity_vodplayer"
            android:parentActivityName="sk.antik.res.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="sk.antik.res.MainActivity" />
        </activity>
    </application>

</manifest>
